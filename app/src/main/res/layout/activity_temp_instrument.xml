<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_get_did"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="get_did" />


                <Button
                    android:id="@+id/btnVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="version" />

                <Button
                    android:id="@+id/btnBattery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Battery" />

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清空" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnGetConfig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="读配置" />

                <Button
                    android:id="@+id/btnSetUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置单位" />


                <Button
                    android:id="@+id/btnSetVolume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置音量" />

                <Button
                    android:id="@+id/btnSetLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置语言" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAutoOpen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置自动开机" />


                <Button
                    android:id="@+id/btnTestTempDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置测温距离" />


                <Button
                    android:id="@+id/btnBeep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置提示音" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnTempBodyAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="体温校准+" />

                <Button
                    android:id="@+id/btnTempBodyLess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="体温校准-" />

                <Button
                    android:id="@+id/btnTempObjectAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计量校准+" />

                <Button
                    android:id="@+id/btnTempObjectLess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计量校准-" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/etAlarmTempC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:hint="℃"
                    android:text="375" />

                <EditText
                    android:id="@+id/etAlarmTempF"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:hint="℉"
                    android:text="375" />

                <Button
                    android:id="@+id/btnTempErr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置报警值" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnTempBroadcast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置温度播报" />

                <Button
                    android:id="@+id/btnAlarmSound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置报警音效" />

                <Button
                    android:id="@+id/btnReset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="恢复出厂设置" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSetSensitivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置灵敏度" />

                <Button
                    android:id="@+id/btnAutoClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置自动关机" />




            </LinearLayout>

        </LinearLayout>


    </ScrollView>


    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="10dp"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll">


    </ListView>

</LinearLayout>