<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始" />

        <Button
            android:id="@+id/btn_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导出" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dp"
            android:text="成功:" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dp"
            android:text="0" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dp"
            android:text="失败:" />

        <TextView
            android:id="@+id/tv_fail_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dp"
            android:text="0" />

        <Button
            android:id="@+id/btn_out_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导出上次" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_cid"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="cid"
            android:inputType="number" />

        <EditText
            android:id="@+id/ed_vid"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="vid"
            android:inputType="number" />

        <EditText
            android:id="@+id/ed_pid"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="pid"
            android:inputType="number" />
        <TextView
            android:text="版本号:"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/ed_version"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="蓝牙信号:"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <EditText
            android:id="@+id/ed_signal"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="-60"
            android:inputType="number" />




    </LinearLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>